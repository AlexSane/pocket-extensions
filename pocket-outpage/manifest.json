{
    "name": "Pocket",
    "version": "0.1",
    "description": "Simple pocket application",
    "browser_action": {
        "default_icon": "images/logo-19.png",
        "default_title": "Random article"
    },
    "background": {
        "scripts": [
            "libs/require.js",
            "app.js"
        ]
    },
    "permissions": [
        "tabs", "http://*/", "https://*/"
    ],
    "icons": {
        "19": "images/logo-19.png"
    },
    "manifest_version": 2
}