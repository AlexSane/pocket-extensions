{
    "name": "Take from Pocket",
    "version": "1.0",
    "description": "Opens random article from Pocket (http://getpocket.com). Shows number of unread articles in Pocket.",
    "browser_action": {
        "default_icon": "images/logo-19.png",
        "default_title": "Random article"
    },
    "background": {
        "scripts": [
            "libs/require.js",
            "app.js"
        ]
    },
    "permissions": [
        "tabs", 
        "http://*/", 
        "https://*/",
        "contextMenus",
        "identity"
    ],
    "icons": {
        "128": "images/logo-128.png",
        "48": "images/logo-48.png"
    },
    "oauth2": {
      "client_id": "1071794135138-fc0iu7s221uj69pnqq4meb9qn441goi4.apps.googleusercontent.com",
      "scopes":[]
    },
    "manifest_version": 2
