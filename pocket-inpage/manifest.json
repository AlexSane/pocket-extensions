{
    "name": "Page action by URL",
    "version": "1.0",
    "description": "Shows a page action for urls which have the letter 'g' in them.",
    "background": {
        "scripts": [
            "libs/require.js",
            "app.js"
        ]
    },
    "page_action": {
        "default_icon": "images/notAdded-19.png",
        "default_title": "There's a 'G' in this URL!"
    },
    "permissions": [
        "tabs", "http://*/", "https://*/"
    ],
    "icons": {
        "19": "images/logo-19.png"
    },
    "manifest_version": 2
}